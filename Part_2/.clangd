CompileFlags:
  Remove:
    - "--expt-extended-lambda"
    - '-gencode=arch=compute_89,code="sm_89,compute_89"'
    - "-rdc=true"
    - '-forward-unknown-to-host-compiler'
    - '--expt-relaxed-constexpr'
    - '-forward-unknown-to-host-compiler'
    - '-arch=native'
    - '--options-file'
    - '-Xcompiler=-fPIC'
    - '--generate-code=arch=compute_89,code=[compute_89,sm_89]'
  Add:
    - '-std=c++17'
    - '--cuda-gpu-arch=sm_89'
  Compiler: g++
